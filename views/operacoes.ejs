            <li><a href="/operacoes?mes=dezembro">Dezembro</a></li>
        </ul>

    </p>
    <br>
    <% operacoes.forEach((operacao) => { %>
        <p>
            <%=operacao.descricao %> R$
                <%=operacao.valor %> - Sub-total: R$
                    <%= operacao.sub %>
                        - Vencimento no dia:
                        <%= operacao.diaVencimento %>
                            - <a href="/operacoes/delete/<%= operacao._id %>">Excluir</a> - <a href="/operacoes/edit/<%= operacao._id %>">Editar</a>
        </p>
        <% }) %>

            <% include footer %>